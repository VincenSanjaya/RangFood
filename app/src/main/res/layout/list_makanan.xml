<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/vgaris"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/garis"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="15dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/vgaris"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/ivfood1"
            android:layout_width="88.92dp"
            android:layout_height="94.41dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/food_1" />

        <TextView
            android:id="@+id/tvnamamenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Combo Mabar FC M"
            android:fontFamily="@font/oswald"
            android:textSize="18dp"
            android:textColor="@color/brown"
            android:letterSpacing="0.01"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Fire Chicken + 3 Rice + Small/3 Medium/"
            android:fontFamily="@font/oswald"
            android:textSize="14dp"
            android:letterSpacing="0.01"
            android:textColor="@color/abu"
            android:layout_below="@+id/tvnamamenu"/>

        <TextView
            android:id="@+id/tvdesc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1L Fruitarian Drink"
            android:fontFamily="@font/oswald"
            android:textSize="14dp"
            android:letterSpacing="0.01"
            android:textColor="@color/abu"
            android:layout_below="@+id/tvdesc"/>

        <TextView
            android:id="@+id/tvharga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="134.000"
            android:fontFamily="@font/oswald"
            android:textSize="18dp"
            android:letterSpacing="0.01"
            android:textColor="@color/brown"
            android:layout_below="@+id/tvdesc2"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/ivlike"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/like"
            android:layout_below="@+id/tvharga"
            android:layout_marginTop="5dp"/>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add To Cart"
            android:fontFamily="@font/oswald"
            android:textSize="12dp"
            android:textColor="@color/lightyellow"
            android:letterSpacing="-0.01"
            app:cornerRadius="17dp"
            android:backgroundTint="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@color/kuning"
            android:textAllCaps="false"
            android:layout_below="@id/ivfood1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>
        
    </RelativeLayout>

</RelativeLayout>